{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ team.CreationDate ? team.CreationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ team.Nickname }}</td>
            </tr>
            <tr>
                <th>Trophies</th>
                <td>{{ team.trophies }}</td>
            </tr>
            <tr>
                <th>Sponsors</th>>
                {% for sponsor in team.sponsors %}
                    <td>{{ sponsor }}</td>>
                {% else %}
                    <td>no sponsors</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Players</th>
                {% for player in team.players %}
                    {% if player.role!="coach" %}
                        <td>{{player.name}}({{ player.role }})</td>
                    {% endif %}
                {% endfor %}
            </tr>
            <tr>
                <th>Coach</th>
                {% for player in team.players %}
                    {% if player.role=="coach" %}
                        <td>{{player.name}}</td>
                    {% endif %}
                {% endfor %}

            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_index') }}">back to list</a>

    <a href="{{ path('app_team_edit', {'id': team.id}) }}">edit</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
