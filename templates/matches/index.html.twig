{% extends 'base.html.twig' %}

{% block title %}Matches index{% endblock %}

{% block body %}
    <h1>Matches</h1>
<body id="body-pd">
<header class="header" id="header">
    <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
    <
</header>
<div class="l-navbar" id="nav-bar">
    <nav class="nav">
        <div> <i class="fa-sharp fa-solid fa-futbol fa-lg"></i> <span class="nav_logo-name">ScoreForYou</span>
            <div class="nav_list">
                <a href="http://127.0.0.1:8000/team" class="nav_link "> <i class="fa-solid fa-people-group fa-lg"></i> <span class="nav_name">Teams</span> </a>
                <a href="http://127.0.0.1:8000/matches" class="nav_link active">  <i class="fa-solid fa-stopwatch-20 fa-lg"></i> <span class="nav_name">Matches</span> </a>
                <a href="http://127.0.0.1:8000/player" class="nav_link "> <i class="fa-solid fa-person-running fa-lg"></i> <span class="nav_name">Players</span> </a>
                <a href="http://127.0.0.1:8000/sponsor" class="nav_link "> <i class="fa-solid fa-file-invoice-dollar fa-lg"></i> <span class="nav_name">Sponsors</span> </a>
                <a href="http://127.0.0.1:8000/standings" class="nav_link"> <i class="fa-solid fa-ranking-star fa-lg"></i> <span class="nav_name">Standings</span> </a>
                <!---<a href="#" class="nav_link"> <i class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Stats</span> </a> -->
            </div>
        </div>
    </nav>
</div>
<!--Container Main start-->
<div class="height-100 bg-light">
    <h4>
        <table class="table table-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th>Team1</th>
                <th>Score1</th>
                <th>Score2</th>
                <th>Team2</th>
                <th>DateTime</th>
                <th>Referee</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody class="table-group-divider">
            {% for match in matches %}
                <tr>
                    <td>{{ match.id }}</td>
                    <td>{{  match.team1}}</td>
                    <td>{{ match.score1 }}</td>
                    <td>{{ match.score2 }}</td>
                    <td>{{ match.team2 }}</td>
                    <td>{{ match.dateTime ? match.dateTime|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ match.referee }}</td>
                    <td>
                        <a href="{{ path('app_matches_show', {'id': match.id}) }}">show</a>
                        <a href="{{ path('app_matches_edit', {'id': match.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </h4></div>

    <style>
        h1{
            text-align:center;

        }

    </style>
    <a href="{{ path('app_matches_new') }}">Create new</a>
{% endblock %}
