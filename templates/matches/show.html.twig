{% extends 'base.html.twig' %}

{% block title %}Matches{% endblock %}

{% block body %}
    <h1>Matches</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>Score1</th>
                <td>{{ match.score1 }}</td>
            </tr>
            <tr>
                <th>Score2</th>
                <td>{{ match.score2 }}</td>
            </tr>
            <tr>
                <th>DateTime</th>
                <td>{{ match.dateTime ? match.dateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Referee</th>
                <td>{{ match.referee }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matches_index') }}">back to list</a>

    <a href="{{ path('app_matches_edit', {'id': match.id}) }}">edit</a>

    {{ include('matches/_delete_form.html.twig') }}
{% endblock %}
